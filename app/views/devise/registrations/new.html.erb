    <%# <div class="col-md-8"> %>
    <div class="box-inner">
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h1 class="h3 mb-3 font-weight-normal">新規登録</h1>

        <div class="form-group">
          <%= f.label :name, "名前", class: "sr-only" %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "Eメール", class: "sr-only" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Eメール", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード", class: "sr-only" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード", required: true %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(確認)", class: "sr-only" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "パスワード(確認)", required: true %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="mt-5">
        <p><span>------------</span> 既に登録されていますか？ <span>------------</span></p>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
