   <div class="container form-container">
   <%# <div class="row justify-content-center"> %>
    <%# <div class="container"> %>
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true, class: "needs-validation", novalidate: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h1 class="h3 mb-3 font-weight-normal">ログイン</h1>
      <div class="form-group">
        <%= f.label :email, "Eメール", class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address", required: true %>
      </div>
      <div class="form-group">
        <div class="d-flex justify-content-between">
          <div>
            <%= f.label :password, "パスワード", class: "sr-only" %>
          </div>
          <div>
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
      </div>
      <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "ログインしたままにする" %>
          </div>
        <% end %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>   
    <div class="mt-5">
      <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-link" %>
    </div>
  </div>
</div>
