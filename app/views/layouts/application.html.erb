<!DOCTYPE html>
<html>
  <head>
    <title>Myjobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> <!-- 5/23追記追記 -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    

  </head>

  <body>
    
      
     
      <% if user_signed_in? %>  
      <header>
        <div><%= link_to root_path do %><img src="/assets/header.png" alt="logo" id="logo"><% end %></div>
        <div><%= link_to "トップ", root_path, class: "text-white" %></div>
        <div><%= link_to "投稿する", new_post_path, class: "text-white" %></div>
        <div><%= link_to "投稿一覧", posts_path, class: "text-white" %></div>
        <div><%= link_to "ユーザー", users_path, class: "text-white" %></div>  
        <div><%= link_to "マイページ", user_path(current_user.id), class: "text-white" %></div>
        <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-white" %></div>
      </header>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <%= flash[:alert] %>
        </div>
      <% end %>


    <%# <% flash.each do |key, value| %>
      <%# <div class="alert alert-<%= key %>
        <%# <%= value %> 
      <%# </div> %>
    <%# <% end %> 
  <%# <div class="container"> %>
    <%= yield %>
  <%# </div> %>
  </body>
</html>
