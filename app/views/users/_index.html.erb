<div class="row justify-content-center">
  <% users.each do |user| %>
  <div class="one-post card w-100">
    <%= link_to user_path(user) do %>
    <p class="caption h4"><%= user.name %></p>

                              

    <%# 12/21追記 %>
    <div class="d-flex">
      <%= attachment_image_tag user, :profile_image, size: '50x50', fallback:  "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
      <h4 class="ml-5"><%= user.profile %></h4>
    </div>
    <p class="caption"><%= "#{user.posts.count} 投稿" %>

     <%# <% if current_user.admin? %> 
    <% if user_signed_in? && current_user.admin?  %> 
    <%# <% if current_user.admin? && !current_user?(user) %>  
    <%# <% if current_user && current_user.admin? %> 
      | <%= link_to "削除する", user_path(user), method: :delete,
                     data: { confirm: "削除します、よろしいですか" } %>    
    <% end %>
    <% end %>
    </p>
    
  </div>
  
  <% end %>
  <%= paginate users %>
  
</div>
